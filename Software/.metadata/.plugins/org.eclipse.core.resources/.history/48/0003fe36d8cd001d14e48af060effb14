        {GATE_HC0_SIG_GPIO_Port, GATE_HC0_SIG_Pin},
        {GATE_HC1_SIG_GPIO_Port, GATE_HC1_SIG_Pin},
        {GATE_HC2_SIG_GPIO_Port, GATE_HC2_SIG_Pin},
        {GATE_HC3_SIG_GPIO_Port, GATE_HC3_SIG_Pin},
};

